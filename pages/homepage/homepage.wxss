.empty-data {
  font-size: 15px;
  position: relative;
  text-align: center;
  margin: 20vh auto 10vh;
  color: #b9b9b9;
  /* color: red */
}

.empty-data::after {
  content: '';
  width: 16%;
  border-top: 1px solid #d7d7d7;
  position: absolute;
  right: 16%;
  top: 50%;
  transform: transalteY(-50%);
}

.empty-data::before {
  content: '';
  width: 16%;
  border-top: 1px solid #d7d7d7;
  position: absolute;
  left: 16%;
  top: 50%;
  transform: transalteY(-50%);
}

